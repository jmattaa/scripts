#!/usr/bin/env bash

# make stdin a emoji!!!

declare -A emoji
emoji[":)"]=ğŸ˜€
emoji[":bear"]=ğŸ»
emoji[":("]=ğŸ˜¢
emoji[":fire"]=ğŸ”¥
emoji[":tada"]=ğŸ‰
emoji[":lmao"]=ğŸ˜­
emoji[":cat"]=ğŸ±
emoji[":dog"]=ğŸ¶
emoji[":panda"]=ğŸ¼
emoji[":penguin"]=ğŸ§
emoji[":unicorn"]=ğŸ¦„
emoji[":skull"]=ğŸ’€
emoji[":ghost"]=ğŸ‘»
emoji[":robot"]=ğŸ¤–
emoji[":smile"]=ğŸ˜„
emoji[":thinking"]=ğŸ¤”

toemoji() {
    while read -r line; do 
        for k in ${!emoji[@]}; do
            line=${line//$k/${emoji[$k]}}
        done
        echo "$line"
    done
}

toemoji "$@"
